<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>sendsoknad</artifactId>
    <groupId>no.nav.sbl.dialogarena</groupId>
    <version>18.6.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>sendsoknad-pdfutility</artifactId>
  <name>${project.artifactId}</name>
  <version>18.6.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.apache.commons</pattern>
                  <shadedPattern>org.shaded2.apache.commons</shadedPattern>
                  <includes>
                    <include>org.apache.commons.**</include>
                  </includes>
                </relocation>
                <relocation>
                  <pattern>org.apache.fontbox</pattern>
                  <shadedPattern>org.shaded2.apache.fontbox</shadedPattern>
                  <includes>
                    <include>org.apache.fontbox.**</include>
                  </includes>
                </relocation>
                <relocation>
                  <pattern>org.apache.tika</pattern>
                  <shadedPattern>org.shaded2.apache.tika</shadedPattern>
                  <includes>
                    <include>org.apache.tika.**</include>
                  </includes>
                </relocation>
                <relocation>
                  <pattern>org.apache.xmpbox</pattern>
                  <shadedPattern>org.shaded2.apache.xmpbox</shadedPattern>
                  <includes>
                    <include>org.apache.xmpbox.**</include>
                  </includes>
                </relocation>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>org.shaded2.slf4j</shadedPattern>
                  <includes>
                    <include>org.slf4j.**</include>
                  </includes>
                </relocation>
              </relocations>
              <artifactSet>
                <excludes>
                  <exclude>junit:junit</exclude>
                  <exclude>org.apache.commons.logging:*</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>no.nav.sbl.pdfutility.PDFForhandsvisning</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven-jar-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <imgscalr-lib.version>4.2</imgscalr-lib.version>
    <tika-core.version>1.22</tika-core.version>
    <java.version>1.8</java.version>
    <maven-jar-plugin.version>3.2.0</maven-jar-plugin.version>
    <pdfbox.version>2.0.20</pdfbox.version>
    <maven-shade-plugin.version>3.2.1</maven-shade-plugin.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>
